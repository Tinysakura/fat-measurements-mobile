<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="160dp"
    android:background="@mipmap/default_banner">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/nav_head_portrait"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0.2"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/colorPrimaryDark"
        android:src="@mipmap/default_head_portrait"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nav_user_name"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/nav_head_portrait"
        app:layout_constraintLeft_toLeftOf="@+id/nav_head_portrait"
        android:text="@string/nav_default_user_name"
        android:textColor="@color/colorGray1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nav_personal_signature"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/nav_user_name"
        app:layout_constraintLeft_toLeftOf="@+id/nav_user_name"
        android:textColor="@color/colorGray1"
        android:text="@string/nav_default_personal_signature"/>

</android.support.constraint.ConstraintLayout>